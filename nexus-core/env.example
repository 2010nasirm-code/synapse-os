# Nexus OS Core Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED: Supabase Configuration
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# OPTIONAL: AI/LLM Configuration
# ===========================================
# OpenAI API Key (for embeddings and advanced AI features)
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# NEXUS CONFIGURATION
# ===========================================
# Enable/disable memory system
NEXUS_MEMORY_ENABLED=true

# Rate limiting (queries per minute)
NEXUS_QUERIES_PER_MINUTE=60

# Memory retention (days, 0 = forever)
NEXUS_MEMORY_RETENTION_DAYS=30

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXUS_AUTOMATIONS_ENABLED=true
NEXUS_MULTI_AGENT_ENABLED=true
NEXUS_VECTOR_SEARCH_ENABLED=true
NEXUS_OFFLINE_MODE_ENABLED=false

# ===========================================
# DEVELOPMENT/DEBUG
# ===========================================
NODE_ENV=development
NEXUS_DEBUG=false


